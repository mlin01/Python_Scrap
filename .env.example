# Universal Web Scraper Environment Configuration
# Copy this file to .env and customize the values

# Debug and Logging
DEBUG_MODE=False
LOG_LEVEL=INFO

# Scraping Settings
REQUEST_DELAY=2.0
CONCURRENT_REQUESTS=1
DOWNLOAD_TIMEOUT=180
RETRY_TIMES=3

# User Agent Settings
USER_AGENT_ROTATION=True
# CUSTOM_USER_AGENTS=["Agent1", "Agent2"]  # Optional custom user agents

# Proxy Settings
PROXY_ENABLED=False
PROXY_ROTATION=True
# PROXY_LIST=["http://proxy1:port", "http://proxy2:port"]  # Add your proxies

# Selenium Settings
SELENIUM_HEADLESS=True
SELENIUM_TIMEOUT=30
SELENIUM_IMPLICIT_WAIT=10
# CHROME_OPTIONS=["--no-sandbox", "--disable-dev-shm-usage"]

# Anti-Detection Settings
CAPTCHA_SOLVER_ENABLED=False
# CAPTCHA_API_KEY=your_captcha_service_api_key
RESPECT_ROBOTS_TXT=True

# Output Settings
EXPORT_FORMATS=["json"]
INCLUDE_HTML=False
COMPRESS_OUTPUT=False
OUTPUT_DIR=output

# Database Settings (if using database storage)
# DATABASE_URL=sqlite:///scraper.db
# DATABASE_ENABLED=False

# API Keys for Services
# TWOCAPTCHA_API_KEY=your_2captcha_api_key
# ANTICAPTCHA_API_KEY=your_anticaptcha_api_key
# PROXY_SERVICE_API_KEY=your_proxy_service_api_key
